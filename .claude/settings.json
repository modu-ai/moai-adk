{
  "env": {},
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/session_start__show_project_info.py",
            "type": "command",
            "description": "Display project info and language configuration at session start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/pre_tool__auto_checkpoint.py",
            "type": "command",
            "description": "Create automatic checkpoint before file modifications"
          },
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/pre_tool__auto_spec_proposal.py",
            "type": "command",
            "description": "Automatically propose SPEC generation on code file creation/modification"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/user_prompt__jit_load_docs.py",
            "type": "command",
            "description": "Load documentation on-demand based on user intent"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/session_end__cleanup.py",
            "type": "command",
            "description": "Clean up session state and temporary files"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "uv run $CLAUDE_PROJECT_DIR/.claude/hooks/alfred/post_tool__log_changes.py",
            "type": "command",
            "description": "Log file changes for audit and tracking"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ]
  },
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(alfred:*)",
      "Bash(black:*)",
      "Bash(coverage:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(gh issue:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(git branch:*)",
      "Bash(git config:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git remote:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git tag:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(moai-adk:*)",
      "Bash(mv:*)",
      "Bash(mypy:*)",
      "Bash(pytest:*)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(rg:*)",
      "Bash(ruff:*)",
      "Bash(sort:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(uniq:*)",
      "Bash(uv:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "BashOutput",
      "Edit",
      "Glob",
      "Grep",
      "KillShell",
      "MultiEdit",
      "NotebookEdit",
      "Read",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write"
    ],
    "ask": [
      "Bash(gh pr merge:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git revert:*)",
      "Bash(git stash:*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(rm -rf:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(uv add:*)",
      "Bash(uv remove:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.config/gcloud/**)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf C\\:/:*)",
      "Bash(rm -rf C\\:/*:*)",
      "Bash(del /S /Q C\\:/:*)",
      "Bash(rmdir /S /Q C\\:/:*)",
      "Bash(format:*)",
      "Bash(chmod -R 777:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(reboot:*)",
      "Bash(shutdown:*)",
      "Bash(git push --force:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git reset --hard:*)",
      "Bash(git rebase -i:*)"
    ]
  }
}
